{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
                <input type="text" id="titulo" name="titulo" placeholder="Título da postagem" class="form-control">
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            <label for="descricao">Descrição: </label>
                <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">
            <label for="conteudo">Conteúdo: </label>

            <textarea name="conteudo" id="conteudo" placeholder="Conteúdo da postagem" class="form-control"></textarea>

            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    <!--Quando não tiver nenhuma categoria registrada é importante que eu coloque o valor como 0-->
                {{/each}}
            </select>

            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form>
    </div>
</div>